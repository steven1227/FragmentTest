<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.steven.testanalytics.Activity2">

    <fragment android:name="com.example.steven.testanalytics.Headings"
        android:id="@+id/headlines_fragment"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        tools:layout="@layout/heading" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_width="0dp">
        <fragment android:name="com.example.steven.testanalytics.Passeges"
            android:id="@+id/article_fragment"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:layout="@layout/heading" />
        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            />
    </LinearLayout>



</LinearLayout>
